<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.khurana.nikhil.tuhub.SocietyDetails">


    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:text="MSC"
            android:gravity="center"
            android:background="#00796B"
            android:textColor="#ffffff"/>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:textColor="#01579B"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:text="The Microsoft Student Chapter, one of the most active and elite societies of Thapar University aims to garner creativity and talent and propagate awareness regarding various tech-related knowledge throughout the ingenious minds of Thapar and beyond"
            />




    </LinearLayout>




</RelativeLayout>
